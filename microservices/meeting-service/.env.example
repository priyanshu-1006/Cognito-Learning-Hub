# Server Configuration
PORT=3005
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/cognito_meetings

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Meeting Settings
MEETING_TTL=14400                   # 4 hours in seconds
MEETING_CODE_LENGTH=8               # 8-character room IDs
MAX_PARTICIPANTS=50                 # Maximum participants per meeting
MEETING_IDLE_TIMEOUT=3600           # 1 hour idle = auto-close

# WebRTC Configuration (Public STUN servers)
STUN_SERVER_1=stun:stun.l.google.com:19302
STUN_SERVER_2=stun:stun1.l.google.com:19302
STUN_SERVER_3=stun:stun2.l.google.com:19302

# TURN Configuration (Optional - for NAT traversal)
# Leave empty to use STUN-only (works for most cases)
TURN_SERVER_URL=
TURN_USERNAME=
TURN_CREDENTIAL=

# Topology Settings
MESH_MAX_PARTICIPANTS=5             # Use mesh for <=5 participants
SFU_MODE_ENABLED=false              # Enable SFU for larger meetings (requires mediasoup)

# Socket.IO Settings
SOCKET_PING_TIMEOUT=20000           # 20 seconds (shorter for meetings)
SOCKET_PING_INTERVAL=15000          # 15 seconds
SOCKET_MAX_HTTP_BUFFER_SIZE=1000000 # 1MB

# Recording Settings (Optional)
ENABLE_RECORDING=false
RECORDING_STORAGE_PATH=./recordings

# Performance Settings
REDIS_KEY_PREFIX=meeting:
ENABLE_COMPRESSION=true
