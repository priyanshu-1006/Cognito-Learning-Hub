# Server
PORT=3006
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/cognito_social

# Microservices Integration
GAMIFICATION_SERVICE_URL=http://localhost:3007

# Redis (for feed caching and pub/sub)
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=social:

# Feed Settings
FEED_PAGE_SIZE=20
FEED_CACHE_TTL=300  # 5 minutes
MAX_FEED_ITEMS=1000

# Notification Settings
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_CACHE_TTL=600  # 10 minutes

# Follow Settings
MAX_FOLLOWING=5000
MAX_FOLLOWERS=100000

# Post Settings
MAX_POST_LENGTH=5000
MAX_IMAGES_PER_POST=10
IMAGE_MAX_SIZE=5242880  # 5MB

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Bull Queue
QUEUE_REDIS_URL=redis://localhost:6379
FEED_WORKER_CONCURRENCY=5
NOTIFICATION_WORKER_CONCURRENCY=10

# Socket.IO
SOCKET_PING_TIMEOUT=30000  # 30 seconds
SOCKET_PING_INTERVAL=10000  # 10 seconds

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
